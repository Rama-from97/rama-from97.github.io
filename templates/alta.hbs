{{#if allProducts.length}}
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Marca</th>
            <th>Categoría</th>
            <th>Detalles</th>
            <th>Foto</th>
            <th>Envío</th>
            <th>Acciones</th>
        </tr>

        {{#each allProducts}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{stock}}</td>
                <td>{{brand}}</td>
                <td>{{category}}</td>
                <td>{{details}}</td>
                <td class='table--img'>
                    <img src="{{photo}}" alt="{{name}}">
                </td>
                {{#if delivery}}
                    <td>Si</td>
                {{else}}
                    <td>No</td>
                {{/if}}
                    <td>
                        <button onclick="updateProduct({{id}})">Modificar</button>
                        <button onclick="deleteProduct({{id}})">Eliminar</button>
                    </td>
            </tr>        
        {{/each}}

    </table>
{{else}}
    <h3>No se encontraron productos</h3>
{{/if}}